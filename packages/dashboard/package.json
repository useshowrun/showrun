{
  "name": "@showrun/dashboard",
  "version": "0.1.0",
  "description": "Dashboard for running and observing Task Packs in real time",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "tsc && vite build --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@showrun/core": "workspace:*",
    "@showrun/mcp-server": "workspace:*",
    "@showrun/harness": "workspace:*",
    "better-sqlite3": "^11.7.0",
    "camoufox-js": "^0.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "cors": "^2.8.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.0.0",
    "winston": "^3.19.0",
    "playwright": "^1.58.0"
  },
  "devDependencies": {
    "vitest": "^3.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "typescript": "^5.3.3",
    "vite": "^6.0.7"
  }
}
