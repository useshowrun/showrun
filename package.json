{
  "name": "showrun",
  "version": "0.1.1b",
  "description": "TypeScript + Playwright framework for deterministic, versioned browser automation. Define flows in JSON or code, run via CLI or MCP, edit with AI-assisted dashboard (Teach Mode)",
  "type": "module",
  "bin": {
    "showrun": "./bin/showrun.js"
  },
  "scripts": {
    "build": "pnpm -r --filter=!showrun build && pnpm --filter=showrun build",
    "prepare": "pnpm build",
    "dev": "pnpm build && pnpm test:example",
    "test:example": "node packages/showrun/dist/cli.js run ./taskpacks/example-json --inputs '{}'",
    "test:unit": "pnpm -r test",
    "dashboard": "node packages/showrun/dist/cli.js dashboard"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "license": "MIT",
  "author": "ShowRun <developers@showrun.co>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/useshowrun/showrun.git"
  },
  "homepage": "https://github.com/useshowrun/showrun",
  "bugs": {
    "url": "https://github.com/useshowrun/showrun/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
